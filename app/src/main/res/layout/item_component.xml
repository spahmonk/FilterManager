<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_margin="4dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/componentIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_help"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/componentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название компонента"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/componentStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Статус"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/replaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заменить"
            android:textSize="12sp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:layout_marginStart="8dp"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/lastReplacementDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Последняя замена"
        android:textSize="12sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/nextReplacementDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Следующая замена"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/replacementProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:progress="50" />

</LinearLayout>